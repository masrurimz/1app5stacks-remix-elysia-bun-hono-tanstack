{
	"name": "db",
	"module": "index.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./src/index.ts"
		},
		"./client": {
			"types": "./dist/db-client.d.ts",
			"default": "./src/db-client.ts"
		},
		"./schema": {
			"types": "./dist/db-schema.d.ts",
			"default": "./src/db-schema.ts"
		}
	},
	"scripts": {
		"generate": "bun with-env drizzle-kit generate",
		"push": "bun with-env drizzle-kit push",
		"seed": "bun with-env bun ./src/db-seed.ts",
		"studio": "bun with-env  drizzle-kit studio",
		"with-env": "dotenv -e ../../.env --"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"drizzle-kit": "^0.30.1"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"@libsql/client": "^0.14.0",
		"drizzle-orm": "^0.38.3"
	}
}
